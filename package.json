{
  "name": "@0x-jerry/openapi-ts",
  "version": "1.1.0",
  "description": "This package provide a quick way to transform OpenAPI schema or Swagger schema to client typescript code.",
  "type": "module",
  "exports": {
    ".": {
      "default": "./dist/src/index.js",
      "types": "./dist/src/index.d.ts"
    },
    "./runtime": {
      "default": "./dist/runtime/index.js",
      "types": "./dist/runtime/index.d.ts"
    }
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui --coverage",
    "build": "tsup",
    "prepublishOnly": "npm run build",
    "g:test": "tsx test/e2e.ts",
    "release": "x-release"
  },
  "tsup": {
    "entry": [
      "src/index.ts",
      "runtime/index.ts"
    ],
    "format": "esm",
    "dts": true,
    "clean": true
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "optionalDependencies": {
    "axios": "^1.6.7",
    "ky": "^1.2.0"
  },
  "dependencies": {
    "@0x-jerry/utils": "^2.1.1",
    "@biomejs/biome": "^1.5.3",
    "lodash-es": "^4.17.21",
    "memfs": "^4.6.0",
    "openapi-typescript": "^6.7.4",
    "quicktype-core": "^23.0.81",
    "swagger2openapi": "^7.0.8"
  },
  "devDependencies": {
    "@0x-jerry/x-release": "^0.4.0",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.11.16",
    "@vitest/coverage-v8": "^1.2.2",
    "@vitest/ui": "^1.2.2",
    "axios": "^1.6.7",
    "ky": "^1.2.0",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "1.2.2"
  }
}
