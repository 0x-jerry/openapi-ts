{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "strict": true,
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "outDir": "dist",
    "types": [
      "vitest/globals"
    ]
  },
  "include": [
    "src",
    "test",
    "cli"
  ],
  "exclude": [
    "test/out"
  ]
}