{
  "name": "@0x-jerry/openapi-ts",
  "version": "1.4.2",
  "description": "This package provide a quick way to transform OpenAPI schema or Swagger schema to client typescript code.",
  "type": "module",
  "bin": {
    "o2ts": "dist/cli/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "default": "./dist/src/index.js"
    },
    "./runtime": {
      "types": "./dist/runtime/index.d.ts",
      "default": "./dist/runtime/index.js"
    }
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui --coverage",
    "build": "tsup",
    "g:test": "tsx test/e2e.ts",
    "release": "x-release",
    "prepublishOnly": "npm run build"
  },
  "tsup": {
    "entry": [
      "src/index.ts",
      "runtime/index.ts",
      "cli/index.ts"
    ],
    "format": "esm",
    "dts": true,
    "clean": true
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "optionalDependencies": {
    "axios": "^1.7.7",
    "ky": "^1.7.2"
  },
  "dependencies": {
    "@0x-jerry/silver": "^1.0.3",
    "@0x-jerry/utils": "^3.0.0",
    "fs-extra": "^11.2.0",
    "json-schema-to-typescript": "^15.0.2",
    "lodash-es": "^4.17.21",
    "memfs": "^4.11.1",
    "openapi-typescript": "^7.4.0",
    "ora": "^8.1.0",
    "prettier": "^3.3.3",
    "quicktype-core": "^23.0.170",
    "swagger2openapi": "^7.0.8"
  },
  "devDependencies": {
    "@0x-jerry/x-release": "^2.2.2",
    "@types/fs-extra": "^11.0.4",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.5.4",
    "@vitest/coverage-v8": "^2.1.1",
    "@vitest/ui": "^2.1.1",
    "axios": "^1.6.7",
    "ky": "^1.2.0",
    "tsup": "^8.2.4",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "vitest": "2.1.1"
  }
}